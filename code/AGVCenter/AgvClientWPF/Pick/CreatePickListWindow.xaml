<Window x:Class="AgvClientWPF.Pick.CreatePickListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgvClientWPF.Pick"
        mc:Ignorable="d"
        Title="CreatePickList" Height="424.647" Width="502.234"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="择货单号：" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="pickListNrTB" HorizontalAlignment="Left" Height="26" Margin="94,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" KeyUp="deliveryNrTB_KeyUp"/>
        <Button x:Name="createDeliveryBtn" Content="创 建" HorizontalAlignment="Left" Margin="283,341,0,0" VerticalAlignment="Top" Width="75" Click="createPickListBtn_Click"/>
        <Button x:Name="generateDeliveryNrBtn" Content="系统生成号" HorizontalAlignment="Left" Margin="304,10,0,0" VerticalAlignment="Top" Width="70" Height="26" Click="generatePickListNrBtn_Click"/>
        <Label x:Name="label1" Content="择货单项：" HorizontalAlignment="Left" Margin="20,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="uniqItemNrTB" HorizontalAlignment="Left" Height="26" Margin="94,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" KeyUp="uniqItemNrTB_KeyUp"/>
        <Button x:Name="addDeliveryItemBtn" Content="添加" HorizontalAlignment="Left" Margin="304,43,0,0" VerticalAlignment="Top" Width="52" Height="24" Click="addDeliveryItemBtn_Click"/>
        <Button x:Name="removeDeliveryItemBtn" Content="移除项" HorizontalAlignment="Left" Margin="206,340,0,0" VerticalAlignment="Top" Width="52" Height="24" Click="removePickListItemBtn_Click"/>

        <DataGrid x:Name="pickListItemDG"  IsReadOnly="True"
                  HorizontalAlignment="Left" Margin="26,72,0,0" 
                  VerticalAlignment="Top" Height="244" Width="421" 
                  RenderTransformOrigin="0.499,0.316">
            <DataGrid.Columns>
                <DataGridTextColumn Header="产品KSK号" Binding="{Binding Path=Nr}"/>
                <DataGridTextColumn Header="创建时间" Binding="{Binding Path=CreatedAt}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
