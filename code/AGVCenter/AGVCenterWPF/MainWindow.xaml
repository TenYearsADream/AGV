<Window x:Class="AGVCenterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGVCenterWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="993" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="633*"></ColumnDefinition>
            <ColumnDefinition Width="352*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="560" 
                    VerticalAlignment="Top" Width="975" Grid.ColumnSpan="2">
            <TabItem Header="OPC 服务配置">
                <Grid Background="#FFE5E5E5" Height="526" VerticalAlignment="Bottom">
                    <Label x:Name="label" Content="OPC服务列表:" HorizontalAlignment="Left" Margin="26,49,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="OPCListServerBtn" Content="寻找可用OPC服务" HorizontalAlignment="Left" Margin="25,17,0,0" VerticalAlignment="Top" Width="129" Height="27" Click="ListOPCServerBtn_Click"/>
                    <ListBox x:Name="OPCServersLB" HorizontalAlignment="Left" Height="54" Margin="25,75,0,0" VerticalAlignment="Top" Width="190" SelectionChanged="OPCServersLB_SelectionChanged"/>
                    <Button x:Name="ConnectOPCServerBtn" Content="连接服务" HorizontalAlignment="Left" Margin="291,151,0,0" VerticalAlignment="Top" Width="84" Click="ConnectOPCServerBtn_Click" Height="40"/>
                    <Label x:Name="label1" Content="OPC服务：" HorizontalAlignment="Left" Margin="249,72,0,0" VerticalAlignment="Top"/>

                    <TextBox x:Name="OPCServerTB" HorizontalAlignment="Left" Height="23" Margin="340,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
                    <Label x:Name="label2" Content="节点名称:(IP)" HorizontalAlignment="Left" Margin="249,103,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="OPCNodeNameTB" HorizontalAlignment="Left"
                		Height="23" Margin="340,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
                    <Button x:Name="DisConnectOPCServerBtn" Content="端开服务" HorizontalAlignment="Left" Margin="400,151,0,0" VerticalAlignment="Top" Width="78" Click="DisConnectOPCServerBtn_Click" Height="40"/>
                </Grid>
            </TabItem>
            <TabItem Header="总库存操作列表">
                <ListBox x:Name="CenterStockTaskDisplayLB" HorizontalAlignment="Left" Height="526" Margin="10,6,0,-4" VerticalAlignment="Top" Width="954"/>
            </TabItem>
            <TabItem Header="扫描条码入库任务">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="WirteGetPisitionBarBtn" 
                            Content="扫码入库任务" HorizontalAlignment="Left"
                            Margin="294,10,0,0" VerticalAlignment="Top" Width="92" Height="27" Click="WirteGetPisitionBarBtn_Click"/>
                    <TextBox x:Name="ScanedBarCodeTB" HorizontalAlignment="Left" 
                             Height="26" Margin="84,11,0,0"
                		TextWrapping="Wrap" Text="abcdefg123456ABCDEFG02" VerticalAlignment="Top" Width="205"/>
                    <Label x:Name="label3" Content="扫描的条码" HorizontalAlignment="Left" Margin="9,11,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label4" Content="入库任务列表：" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Height="27" Width="138" FontWeight="Bold"/>
                    <ListBox x:Name="CenterInStockTaskLB" HorizontalAlignment="Left" Height="432" Margin="10,75,0,0" VerticalAlignment="Top" Width="927"/>
                    <Button Content="设置条码可写" Height="27" HorizontalAlignment="Right" Margin="0,10,470,0" Name="SetAgvBarcodeCheckWritableBtn" VerticalAlignment="Top" Width="81" Click="SetAgvBarcodeCheckWritableBtn_Click" />
                    <Button Content="设置条码可读" Height="27" HorizontalAlignment="Right" Margin="0,11,374,0" Name="SetAgvBarcodeCheckReadableBtn" VerticalAlignment="Top" Width="81" Click="SetAgvBarcodeCheckReadableBtn_Click" />
                    <Button Content="设置机械手可写" Height="27" HorizontalAlignment="Right" Margin="0,10,251,0" Name="SetInRobootWritableBtn" VerticalAlignment="Top" Width="97" Click="SetInRobootWritableBtn_Click" />
                    <Button Content="【清空任务】" Height="33" HorizontalAlignment="Left" Margin="883,9,0,0" Name="ClearTasksForTestBtn" VerticalAlignment="Top" Width="76" Click="ClearTasksForTestBtn_Click" />
                    <Button Content="设置机械手可读" Height="27" HorizontalAlignment="Right" Margin="0,11,144,0" Name="SetInRobootReadableBtn" VerticalAlignment="Top" Width="97" Click="SetInRobootReadableBtn_Click" />
                </Grid>
            </TabItem>
            <TabItem Header="出库任务" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="61">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label5" Content="待出库任务列表：" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="WaitOutStockTaskLB" HorizontalAlignment="Left" Height="477" Margin="24,41,0,0" VerticalAlignment="Top" Width="203"/>
                    <Button x:Name="CreateOutStockTaskBtn" Content="出库 >" HorizontalAlignment="Left" Margin="234,111,0,0" VerticalAlignment="Top" Width="48" Height="295" FontWeight="Bold" Click="CreateOutStockTaskBtn_Click"/>
                    <ListBox x:Name="OutStockTaskLB" HorizontalAlignment="Left" Height="476" Margin="294,42,0,0" VerticalAlignment="Top" Width="661"/>
                    <Label x:Name="label5_Copy" Content="出库任务列表：" HorizontalAlignment="Left" Margin="294,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
