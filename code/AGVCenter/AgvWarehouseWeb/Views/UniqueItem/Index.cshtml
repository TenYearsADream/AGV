@using MvcPaging;

@model IPagedList<AGVCenterLib.Data.UniqueItem>


@{
    ViewBag.Title = "Index";
}

 
<div class="row" style="margin:0;">
    <div class="col-md-12">
        <form action="/UniqueItem/Search" method="get">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>KSK 号</span>
                    <input type="text" name="Nr" id="Nr" placeholder="KSK 号" value="@ViewBag.Query.Nr" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>大众KNr</span>
                    <input type="text" name="KNr" id="KNr" placeholder="大众KNr" value="@ViewBag.Query.KNr" />
                </div>
            </div>
            <button type="submit" class="marco-btn-success" style="margin-left:0;">
                <i class="glyphicon glyphicon-search"></i>
                搜索
            </button>
        </form>

    </div>
</div>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr><th>&nbsp;</th>
            <th>
                Nr
            </th>
            <th>
                BoxType
            </th>
            <th>
                PartNr
            </th>
            <th>
                KNr
            </th>
            @*<th>
                KNrWithYear
            </th>*@
            <th>
                CheckCode
            </th>
            <th>
                KskNr
            </th>
            <th>
                QR
            </th>
            <th>
                State
            </th>
            <th>
                CreatedAt
            </th>

        </tr>

@if (Model != null)
{
    int i = 0;
    foreach (var item in Model)
    {
        <tr>
            <td>@(i += 1)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxTypeStr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KNr)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.KNrWithYear)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CheckCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KskNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateStr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>

            @*<td>
                    @Html.DisplayFor(modelItem => item.IsCanInStockState)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Nr }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Nr }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Nr })
                </td>*@
        </tr>
    }
}
    </table>




    <div class="col-sm-12" style="text-align:center;">
        <div class="clearfix pagination">
            <div class="pagination-inner">
                @if (Model != null)
            {
                if (ViewBag.Query != null)
                {
                    var html = Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                        .Options(o => o.AddRouteValue("Nr", ViewBag.Query.Nr))
                         .Options(o => o.AddRouteValue("KNr", ViewBag.Query.KNr));
                        @html
                    }
                    else
                    {
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                    }
                }
            </div>
        </div>
    </div>
